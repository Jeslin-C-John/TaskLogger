@model TaskLogger.Models.User
@{
    ViewBag.Title = "Signup";
}

<h1>Signup</h1>

@using (Html.BeginForm())
{
    <div>
        <p>Name</p>
        @Html.TextBoxFor(model => model.Name)
    </div>
    <div>
        <p>Email</p>
        @Html.TextBoxFor(model => model.Email)
    </div>
    <div>
        <p>Password</p>
        @Html.TextBoxFor(model => model.Password)
    </div>
    <div>
        <br />
        <input type="submit" value="Signup" />
    </div>

}